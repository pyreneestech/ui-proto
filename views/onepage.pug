doctype html 
html(lang="en")
    head 
        title One Page 

        meta(charset="utf-8")
        meta(content="IE=edge", http-equiv="X-UA-Compatible")
        meta(content="width=device-width, initial-scale=1", name="viewport")

        // Bootstrap
        link(rel='stylesheet', href='/vendor/bootstrap/bootstrap.css', type='text/css')

        // React
        script(src="https://unpkg.com/react@15/dist/react.js")
        script(src="https://unpkg.com/react-dom@15/dist/react-dom.js")

        // babel for ES2015
        script(src="https://unpkg.com/babel-standalone@6/babel.min.js")

        // Test ES2015
        script(type="text/babel").
            let doit = () => {
                console.log("doit...")
                return null
            }
            doit();

        // Our styles
        link(rel='stylesheet', href='/css/styles.css', type='text/css')

    body
        .container
            // Top Naviagation
            nav(class="navbar navbar-default")
                .navbar-header
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(class="navbar-brand header-title", href="/") Example 

                div(id="navbar", class="collapse navbar-collapse")
                    ul(class="nav navbar-nav navbar-right")
                        li: a(href="/about") About

            // Page Content
            section#content
                h1.title One Page Example

                p.
                    This page demonstrates multiple renderings without layout dependencies, external headers or footers.

                h2 Pug
                .center
                    p Hello, world from Pug.

                :marked
                    ```
                    p Hello, world from Pug.
                    ```
 
                // Test babel ES2015
                h2 Babel
                #output

                :marked
                    ```
                    script(type="text/babel").
                        const getMessage = () => "Hello World from Babel!"
                        document.getElementById('output').innerHTML = getMessage()
                    ```

                // React root
                h2 React
                #root

                :marked
                    ```
                    script(type="text/babel").
                        ReactDOM.render(
                          <p>Hello, world from React!</p>,
                          document.getElementById('root')
                        )            
                    ```

            // Footer
            div.center(style="margin: 3px")
                p(class="text-muted center") Copyright &copy; 1900-2016. Simple Example. All rights reserved. 

        // Test ES2015
        script(type="text/babel").
            const getMessage = () => "Hello World from Babel!"
            document.getElementById('output').innerHTML = getMessage()

        // Test React 
        script(type="text/babel").
            ReactDOM.render(
              <p>Hello, world from React!</p>,
              document.getElementById('root')
            )            

        // Bootstrap JavaScript
        script(src="/vendor/jquery/jquery-3.1.0.min.js" type="text/javascript")
        script(src="/vendor/bootstrap/bootstrap.js" type="text/javascript")
